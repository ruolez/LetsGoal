# LetsGoal Environment Configuration Template
# Copy this file to .env and customize the values for your deployment

#==============================================================================
# Core Application Settings
#==============================================================================

# Flask Environment (development/production)
FLASK_ENV=production

# Flask Application Entry Point
FLASK_APP=backend/app.py

# Secret Key for Session Management (CHANGE THIS!)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# Database URL
DATABASE_URL=sqlite:////app/database/letsgoal.db

#==============================================================================
# CORS Configuration
#==============================================================================

# Allowed origins for CORS (comma-separated list)
# Examples:
# For local network: http://192.168.1.100:5001,http://localhost:5001
# For domain with SSL: https://yourdomain.com
# For domain without SSL: http://yourdomain.com
CORS_ORIGINS=http://localhost:5001

#==============================================================================
# Deployment Configuration
#==============================================================================

# Deployment type: local or domain
DEPLOYMENT_TYPE=local

# Domain name or IP address
DOMAIN_OR_IP=localhost

# SSL enabled: y or n
USE_SSL=n

#==============================================================================
# Security Settings
#==============================================================================

# Session cookie settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Maximum content length (file uploads)
MAX_CONTENT_LENGTH=52428800

# Rate limiting (requests per minute)
RATELIMIT_DEFAULT=100

#==============================================================================
# SMS Configuration (Optional)
#==============================================================================

# AWS SNS Configuration for SMS reminders
# Leave blank to disable SMS functionality
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_SNS_TOPIC_ARN=

# SMS sender ID (optional)
SMS_SENDER_ID=LetsGoal

#==============================================================================
# Logging Configuration
#==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=/app/logs/letsgoal.log

# Enable access logging
ACCESS_LOG_ENABLED=true

#==============================================================================
# Database Configuration
#==============================================================================

# SQLite specific settings
SQLITE_TIMEOUT=20
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_JOURNAL_MODE=WAL

# Database backup retention (days)
BACKUP_RETENTION_DAYS=30

#==============================================================================
# Performance Settings
#==============================================================================

# Number of worker processes (auto-detected if not set)
WORKERS=

# Worker connections
WORKER_CONNECTIONS=1000

# Request timeout (seconds)
TIMEOUT=30

# Keep alive timeout (seconds)
KEEPALIVE=2

#==============================================================================
# Email Configuration (Optional)
#==============================================================================

# SMTP settings for email notifications
# Leave blank to disable email functionality
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=noreply@yourdomain.com

#==============================================================================
# Monitoring and Health Checks
#==============================================================================

# Health check endpoint settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Metrics collection
METRICS_ENABLED=false
METRICS_PORT=9090

#==============================================================================
# Backup Configuration
#==============================================================================

# Automatic backup settings
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_LOCATION=/app/backups

# Remote backup (optional)
REMOTE_BACKUP_ENABLED=false
REMOTE_BACKUP_TYPE=s3
REMOTE_BACKUP_BUCKET=
REMOTE_BACKUP_PREFIX=letsgoal-backups/

#==============================================================================
# Development Settings (Only for development environment)
#==============================================================================

# Debug mode (never enable in production!)
DEBUG=false

# Development server settings
DEV_HOST=0.0.0.0
DEV_PORT=5000
DEV_RELOAD=false

# Database debugging
SQLALCHEMY_ECHO=false

#==============================================================================
# Installation Metadata
#==============================================================================

# Installation information (automatically set by install script)
INSTALL_DATE=
INSTALL_VERSION=
INSTALLED_BY=

# System information
SYSTEM_OS=
SYSTEM_ARCH=
DOCKER_VERSION=